<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">


        <EditText
            android:id="@+id/firstNameEdit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:ems="10"
            android:hint=" First Name"
            android:inputType="textPersonName" />


        <EditText
            android:id="@+id/lastNameEdit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:ems="10"
            android:hint=" Last Name"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/addressLineOneEdit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:ems="10"
            android:hint=" Address Line 1"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/addressLineTwoEdit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:ems="10"
            android:hint=" Address Line 2"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/cityEdit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:ems="10"
            android:hint=" City"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/stateEdit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:ems="10"
            android:hint=" State"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/zipCodeEdit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:ems="10"
            android:hint=" Zip Code"
            android:inputType="textPersonName" />



        <ImageView
            android:id="@+id/chinese"
            android:layout_width="200dp"
            android:layout_height="200dp" />

        <CheckBox
            android:id="@+id/chineseText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Chinese"
            android:textAlignment="center"
            android:textSize="20dp" />

        <ImageView
            android:id="@+id/italian"
            android:layout_width="200dp"
            android:layout_height="200dp" />

        <CheckBox
            android:id="@+id/italianText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Italian"
            android:textAlignment="center"
            android:textSize="20dp" />

        <ImageView
            android:id="@+id/indian"
            android:layout_width="200dp"
            android:layout_height="200dp" />

        <CheckBox
            android:id="@+id/indianText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Indian"
            android:textAlignment="center"
            android:textSize="20dp" />

        <ImageView
            android:id="@+id/mexican"
            android:layout_width="200dp"
            android:layout_height="200dp" />

        <CheckBox
            android:id="@+id/mexicanText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mexican"
            android:textAlignment="center"
            android:textSize="20dp" />

        <Button
            android:id="@+id/submitProfile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/loginHome"
            android:layout_alignStart="@+id/loginHome"
            android:layout_alignTop="@+id/textView4"
            android:layout_marginBottom="25dp"
            android:layout_marginTop="10dp"
            android:text="Save" />
    </LinearLayout>
</ScrollView><!--
</LinearLayout>


    </android.support.constraint.ConstraintLayout> -->
